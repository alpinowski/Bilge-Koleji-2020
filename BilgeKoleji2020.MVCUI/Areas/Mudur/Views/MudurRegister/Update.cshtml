@model BilgeKoleji2020.MODEL.Entities.Register
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Mudur/Views/Shared/_MudurLayout.cshtml";
}

<h2>Update</h2>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Kayıt</h1>
                            </div>
                            <form class="user" method="post">
                                
                                <div class="form-group row">
                                    @*<div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" name="@Model.TcKimlikNumarasi">
                                    </div>*@
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(i=>i.TcKimlikNumarasi,new { @class="form-control form-control-user"})
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(i => i.IsimSoyisim, new { @class = "form-control form-control-user" })

                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" name="Cinsiyet" placeholder="İsim Soyisim">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" name="GeldigiOkul" placeholder="Bitirdiği Okul">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" name="CepTelefonu" placeholder="Cep Telefonu">
                                    </div>

                                    <div class="col-sm-6">
                                        <input type="number" class="form-control form-control-user" name="DigerTelefon" placeholder="Diğer Telefon">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" name="EvAdresi" placeholder="Ev Adresi">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" name="IlçeIl" placeholder="İlçe ve İl">
                                    </div>
                                </div>
                                <button type="submit">Kayıt Ol</button>
                                @*<a href="@Url.Action("Index","MudurRegister")" class="btn btn-primary btn-user btn-block">
                                        Kayıt İşlemini Tamamlayınız
                                    </a>*@
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/PreRegisterTheme/vendor/jquery/jquery.min.js"></script>
    <script src="~/PreRegisterTheme/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/PreRegisterTheme/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/PreRegisterTheme/js/sb-admin-2.min.js"></script>

</body>